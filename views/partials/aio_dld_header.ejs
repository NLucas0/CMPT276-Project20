<div class="header">
    <div id="headerTop">
        <h1 id="headerName">All-in-One Duel Links Draft</h1>
    
        <% if (user) {%>
            <div id="loginDivAfter">
                <label>Welcome <%= user.name %>!</label>
                <button id="headerButton" onclick="goToPage('/logout')">Log Out</button>
            </div>
        <% } else { %>
    
            <div id="loginDivBefore">
                <button id="headerButtonLeft" onclick="goToPage('/login')">Log in</button>
                <button id="headerButton" onclick="goToPage('/signup')">Sign up</button>
            </div>
        <% } %>
        
    </div>
    <hr>
    <div id="navBar">
        <button id="navButton" onclick="goToPage('/landing')">Home</button>
        <% if (user) {%>
            <button id="navButton" onclick="goToPage('/opener')">Pack Opener</button>
            <button id="navButton" onclick="goToPage('/cardView')">Card Database</button>
            <button id="navButton" onclick="goToPage('/deckBuild/decks')">Deck Builder</button>
            <button id="navButton" onclick="goToPage('/trade')">Trade Cards</button>
            <% if (user.type == 'ADMIN') {%>
                <button id="navButton" onclick="goToPage('/admin')">Admin</button>
            <% } %>
        <% } %>
    </div>
    <hr>
</div>
<button class="helpButton" onclick="help(false, event)" hidden="true">?</button>