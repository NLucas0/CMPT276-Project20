    }
</script>
<style>
    /* Note, needs every page this applies to have CSS as following:
    body {
        margin: 0%;
    }
    at a minimum */
    .header {
        background-color: #063970;
    }
    #headerTop {
        padding: 10px;
    }
    #headerName {
        font-family: Verdana, Arial, sans-serif;
        color: white;
    }
    #headerButtonLeft {
        background-color: #0959b0;
        color: white;
        margin-right: 10px;
        padding: 8px 12px;
        font-size: 14px;
        border-style: hidden;
        border-radius: 4px;
        transition-duration: 0.2s
    }
    #headerButtonLeft:hover {
        background-color: #1c6fc7;
    }
    #headerButton {
        background-color: #0959b0;
        color: white;
        margin-left: 10px;
        margin-right: 10px;
        padding: 8px 12px;
        font-size: 14px;
        border-style: hidden;
        border-radius: 4px;
        transition-duration: 0.2s
    }
    #headerButton:hover {
        background-color: #1c6fc7;
    }
    #headerButton:active {
        transform: translateY(5%);
    }
    #navBar {
        padding-top: 0%;
        /* padding-left: 10px;
        padding-right: 10px; */
    }
    #navButton {
        background-color: #063970;
        color: white;
        margin-left: -2px;
