<!DOCTYPE html>
<html>
    <head>
        <title>Pack Opener</title>
        <link rel="stylesheet" href="/stylesheets/packOpener.css">
    </head>

    <%- include ("../partials/aio_dld_header.ejs") %>

    <body>
        <div class="columnLeft">
            <h1 id="boxname"><%= name %></h1>

            Packs Left: <%= packsleft %><br><br>
        
            <% if(card1 == 0) { %>
                Card #1:<br>
                <img src="/images/card_back.jpg"><br>
                Card #2:<br>
                <img src="/images/card_back.jpg"><br>
                Card #3:<br>
                <img src="/images/card_back.jpg"><br>
            <% } else { %>
                Card #1: <%= card1.name %><br>
                <img src=/<%= card1.image %>><br>
                Card #2: <%= card2.name %><br>
                <img src=/<%= card2.image %>><br>
                Card #3: <%= card3.name %><br> 
                <img src=/<%= card3.image %>><br>
            <% } %>
            
            <br>

            <div class="columnLeft">
                <form action="/box/<%= num %>/open" method="get">
                    <input class="opener" type="submit" value="New Pack">
                </form> 
            </div>
            <div class="columnRight">
                <form action="/box/<%= num %>/reset" method="get">
                    <input class="opener" type="submit" value="Reset Box">
                </form>
            </div>
            
            <br>
        </div>

        <div class="columnRight">
            <h2>Remaining Cards:</h2>

            <table style="width:100%">
                <tr>
                    <th style="width:10%">#</th>
                    <th style="width:20%">Rarity</th>
                    <th style="width:70%">Card Name</th>
                </tr>
                <% for(let i = 0; i < numOfLoops; i++) { %>
                    <tr>
                        <td><%= boxprogress[i] %></td>
                        <td><%= cardrarities[i] %></td>
                        <td><%= cardnames[i].name %></td>
                    </tr>
                <% } %>
            </table>
        </div>

        <script>
            //javascript here
        </script>

    </body>
</html>