<!DOCTYPE html>
<!-- basic login page -->
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/main.css"/>
    <title>Document</title>
    <script src="/scripts/login.js" defer></script>
</head>

<body>
    <form id="loginForm" action="/login" method="post">
        <div>Login</div>
        <table id="login form">
            <tr>
                <th>Username:</th>
                <td><input type="username" id="username" name="username"  placeholder="username"
                    onkeydown="goToNext('password', event)" autofocus></td>  
            </tr>
            <tr>
                <th>Password:</th>
                <td><input type="password" id="password" name="password"  placeholder="password"
                    onkeydown="goToNext('submit', event)"></td> 
            </tr>
        </table>

        <input type="button" value="Log in" onclick="goToNext('submit', event)">
    </form>

    <a href="/signup">Sign up</a>
</body>

</html>