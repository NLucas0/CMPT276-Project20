<!DOCTYPE html>
<!-- basic login page -->
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/main.css"/>
    <title>Document</title>
    <script src="/scripts/login.js" defer></script>
</head>

<body>
    <div id="accountAccessWrap">
        <p style="margin:auto; width:20%; text-align:center; margin-top:10%; font-size:200%">Login</p>
        <form id="loginForm" action="/login" method="post">
            <p style="display:block; margin:auto; width:20%; text-align:center; margin-top:6%">Username:</p>
            <input type="username" id="username" name="username" placeholder="username" onkeydown="goToNext('password', event)" autofocus>
            <br>
            <p style="display:block; margin:auto; width:20%; text-align:center">Password:</p>
            <input type="password" id="password" name="password"  placeholder="password" onkeydown="goToNext('submit', event)">
            <br>
            <input type="button" value="Log in" onclick="goToNext('submit', event)" id="submitBtn">
        </form>
        <br>
        <a href="/signup" id="signup">Sign up</a>
    </div>
</body>

</html>